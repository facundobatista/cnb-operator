{
	"definitions": {},
	"$schema": "http://json-schema.org/draft-07/schema#", 
	"$id": "http://charmhub.io/canonical/cnb-operator/schema/charm-configuration/files/v1", 
	"title": "Files", 
	"type": "array",
	"default": [],
	"items":{
		"$id": "#root/files", 
		"title": "File", 
		"type": "object",
		"required": [
			"path",
			"content"
		],
		"properties": {
			"path": {
				"$id": "#root/files/path", 
				"title": "Path", 
				"type": "string",
				"default": "",
				"examples": [
					"/my/mongodb/configuration"
				],
				"pattern": "^.+$"
			},
			"content": {
				"$id": "#root/files/content", 
				"title": "Content", 
				"type": "string",
				"default": "",
				"examples": [
					"mongodb://{{relations.consumed.mongodb.app.replica_set_uri}}"
				],
				"pattern": "^.*$"
			}
		}
	}

}